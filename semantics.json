[
  {
    "name": "description",
    "type": "text",
    "label": "Description",
    "widget": "html",
    "tags": [
      "strong",
      "em"
    ]
  },
  {
    "name": "chartType",
    "type": "select",
    "label": "Chart of Accounts type",
    "options": [
      {
        "value": "belgium-mar",
        "label": "Belgium &ndash; Normalised Chart of Accounts (MAR)"
      },
      {
        "value": "luxembourg-pcn",
        "label": "Luxembourg &ndash; Normalised Chart of Accounts (PCN)"
      }
    ]
  },
  {
    "name": "behaviour",
    "type": "group",
    "label": "Behavioural settings.",
    "importance": "low",
    "description": "These options will let you control how the task behaves.",
    "fields": [
      {
        "name": "enableRetry",
        "type": "boolean",
        "label": "Enable 'Retry'",
        "importance": "low",
        "default": true
      },
      {
        "name": "ALER",
        "type": "select",
        "label": "A/L/E/R column",
        "description": "Show or hide the A/L/E/R column and use for scoring",
        "options": [
          {
            "value": "hidden",
            "label": "Hide"
          },
          {
            "value": "showWithScoring",
            "label": "Show with scoring"
          },
          {
            "value": "showWithoutScoring",
            "label": "Show without scoring"
          }
        ],
        "default": "showWithScoring"
      },
      {
        "name": "positiveNegative",
        "type": "select",
        "label": "Positive / negative column",
        "description": "Show or hide the positive / negative column and use for scoring",
        "options": [
          {
            "value": "hidden",
            "label": "Hide"
          },
          {
            "value": "showWithScoring",
            "label": "Show with scoring"
          },
          {
            "value": "showWithoutScoring",
            "label": "Show without scoring"
          }
        ],
        "default": "showWithScoring"
      },
      {
        "name": "scoreRowOption",
        "type": "boolean",
        "label": "Score 0 or 1 per row",
        "description": "Each row gets 1 point if correct, otherwise 0 points are given.",
        "importance": "low",
        "default": true,
        "optional": true
      },
      {
        "name": "debetCreditEqual",
        "type": "boolean",
        "label": "Debit and credit must be equal",
        "description": "If debit and credit are not the same value, the final score is 0, no matter the other values.",
        "importance": "low",
        "default": false,
        "optional": true
      },
      {
        "name": "noExtraLines",
        "type": "boolean",
        "label": "No extra lines allowed",
        "description": "If the answer contains more lines the correct solution, the final score is 0.",
        "importance": "low",
        "default": false,
        "optional": true
      }
    ]
  },
  {
    "name": "journalEntries",
    "type": "list",
    "label": "Journal entries",
    "importance": "high",
    "min": 1,
    "field": {
      "name": "journalEntry",
      "type": "group",
      "label": "Journal entry",
      "fields": [
        {
          "name": "debitItems",
          "type": "list",
          "label": "Debit items",
          "importance": "medium",
          "min": 1,
          "field": {
            "name": "debitItem",
            "type": "list",
            "label": "Debit item",
            "importance": "low",
            "min": 1,
            "field": {
              "name": "debitItemOption",
              "type": "group",
              "label": "Debit item option",
              "fields": [
                {
                  "name": "accountNumber",
                  "type": "number",
                  "label": "Account number"
                },
                {
                  "name": "invoiceType",
                  "type": "select",
                  "label": "Type",
                  "widget": "showWhen",
                  "showWhen": {
                    "rules": [
                      {
                        "field": "../../../../../behaviour/ALER",
                        "equals": [
                          "showWithScoring",
                          "showWithoutScoring"
                        ]
                      }
                    ]
                  },
                  "options": [
                    {
                      "label": "&mdash;"
                    },
                    {
                      "value": "A",
                      "label": "Assets"
                    },
                    {
                      "value": "L",
                      "label": "Liabilities"
                    },
                    {
                      "value": "E",
                      "label": "Expenses"
                    },
                    {
                      "value": "R",
                      "label": "Revenue"
                    }
                  ],
                  "default": "&mdash;"
                },
                {
                  "name": "plusMinus",
                  "type": "select",
                  "label": "Plus / minus",
                  "widget": "showWhen",
                  "showWhen": {
                    "rules": [
                      {
                        "field": "../../../../../behaviour/positiveNegative",
                        "equals": [
                          "showWithScoring",
                          "showWithoutScoring"
                        ]
                      }
                    ]
                  },
                  "options": [
                    {
                      "value": "plus",
                      "label": "+"
                    },
                    {
                      "value": "minus",
                      "label": "-"
                    }
                  ],
                  "default": "plus"
                },
                {
                  "name": "amount",
                  "type": "number",
                  "label": "Debit amount",
                  "decimals": 2
                }
              ]
            }
          }
        },
        {
          "name": "creditItems",
          "type": "list",
          "label": "Credit items",
          "optional": true,
          "importance": "low",
          "min": 1,
          "field": {
            "name": "creditItem",
            "type": "list",
            "label": "Credit item",
            "field": {
              "name": "creditItemOption",
              "type": "group",
              "label": "Credit item option",
              "fields": [
                {
                  "name": "accountNumber",
                  "type": "number",
                  "label": "Account number"
                },
                {
                  "name": "invoiceType",
                  "type": "select",
                  "label": "Type",
                  "widget": "showWhen",
                  "showWhen": {
                    "rules": [
                      {
                        "field": "../../../../../behaviour/ALER",
                        "equals": [
                          "showWithScoring",
                          "showWithoutScoring"
                        ]
                      }
                    ]
                  },
                  "options": [
                    {
                      "label": "-"
                    },
                    {
                      "value": "A",
                      "label": "Assets"
                    },
                    {
                      "value": "L",
                      "label": "Liabilities"
                    },
                    {
                      "value": "E",
                      "label": "Expenses"
                    },
                    {
                      "value": "R",
                      "label": "Revenue"
                    }
                  ],
                  "default": "-"
                },
                {
                  "name": "plusMinus",
                  "type": "select",
                  "label": "+/-",
                  "widget": "showWhen",
                  "showWhen": {
                    "rules": [
                      {
                        "field": "../../../../../behaviour/positiveNegative",
                        "equals": [
                          "showWithScoring",
                          "showWithoutScoring"
                        ]
                      }
                    ]
                  },
                  "options": [
                    {
                      "value": "plus",
                      "label": "+"
                    },
                    {
                      "value": "minus",
                      "label": "-"
                    }
                  ],
                  "default": "plus"
                },
                {
                  "name": "amount",
                  "type": "number",
                  "label": "Credit amount",
                  "decimals": 2
                }
              ]
            }
          }
        }
      ]
    }
  }
]
